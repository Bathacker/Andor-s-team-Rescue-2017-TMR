//Maestro
#define ENTRADA 1
#define SALIDA 5
void no_conexion(int num){
	if(!BluetoothStatus(num)== NO_ERR){
		TextOut(5,LCD_LINE2,"NO HAY ESCLAVO");
		Wait(2000);
		Stop(true);
	}

}

task main(){
	int tacto=0;
	SetSensorTouch(S1);
	while(true){
		no_conexion(1);
		tacto=Sensor(S1);
		if(tacto == 1){
			SendRemoteNumber(ENTRADA, SALIDA, 3);
		}
	}
}

