//VARIABLES
int color1, color2, luz, luz2;
int color_a, color_b;
int ultra1, ultra2;
int lum = 50;

//FUNCIONES......................................................

//................................................................

int color_1()
{

    if(color1 == 1 || color1 == 2)
    {

        return 1;

    }
    
    else
        return color1;

}

int color_2()
{

    if(color2 == 1 || color2 == 2)
    {

        return 1;

    }

    else
        return color2;

}

