    TextOut(0,LCD_LINE1,"          " );
    TextOut(0,LCD_LINE2,"          " );
    TextOut(0,LCD_LINE3,"          " );
    TextOut(0,LCD_LINE4,"          " );
    TextOut(0,LCD_LINE5,"          " );
    TextOut(0,LCD_LINE6,"          " );

    TextOut(0,LCD_LINE1," COLOR1:         " );
    TextOut(0,LCD_LINE2," COLOR2:         " );
